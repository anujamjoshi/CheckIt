<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="anuja.checkit.ToDo"
        android:id="@+id/relativeLayoutTodo"
        android:layout_width="368dp"
        android:layout_height="495dp"
android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/addTodoBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTodoText"
            android:text="Add this note"
            android:layout_centerHorizontal="true"


            />

        <EditText
            android:id="@+id/editTodoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="What do you want to note down?"/>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewTodo"
            android:orientation="vertical">
             <CheckedTextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
         </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
