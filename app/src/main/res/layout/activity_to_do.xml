<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anuja.checkit.ToDo">
        <RelativeLayout
            android:id="@+id/RelativeLayoutToDO"
            android:layout_width="368dp"
            android:layout_height="495dp"

            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
                <Button
                    android:id="@+id/addTodoButtonToDo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText"
                    android:text="Add this note"
                    android:layout_centerHorizontal="true"


                    />

                <EditText
                    android:id="@+id/editTodoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:ems="10"
                    android:hint="What do you want to note down?"/>
                <CheckBox
                    android:id="@+id/listViewtoDo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addTaskBtn"
                    android:layout_centerHorizontal="true"
                    />
        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
